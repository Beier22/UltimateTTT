<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/startwindow.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ultimatettt.gui.controller.StartWindowController">
   <children>
      <StackPane layoutX="65.0" layoutY="40.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox alignment="CENTER" StackPane.alignment="CENTER">
               <children>
                  <Label id="lblTitle" text="ULTIMATE TIC TAC TOE" textFill="BLUE">
                     <font>
                        <Font name="Luckiest Guy Regular" size="36.0" />
                     </font>
                  </Label>
                  <Label id="lblGameMode" text="Choose Game Mode:" textFill="RED">
                     <font>
                        <Font name="Luckiest Guy Regular" size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="20.0" top="50.0" />
                     </VBox.margin>
                  </Label>
                  <HBox alignment="CENTER">
                     <children>
                        <JFXButton fx:id="btnPVP" buttonType="RAISED" onAction="#playPVP" text="Human VS Human" textAlignment="CENTER" />
                        <JFXButton buttonType="RAISED" text="Human VS AI" textAlignment="CENTER">
                           <HBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </HBox.margin>
                        </JFXButton>
                        <JFXButton buttonType="RAISED" text="AI VS AI" textAlignment="CENTER" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </StackPane>
   </children>
